@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR

package UI <<Rectangle>>{
Interface Ui <<Interface>>
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow
Class HelpWindow
Class StudyPanel
Class QuizPanel
Class ReviewPanel
Class ResultDisplay
Class FlashcardListPanel
Class FlashcardListCard
Class FlashcardViewCard
Class FlashcardQuestionCard
Class FlashcardAnswerCard
Class StatusBarFooter
Class CommandBox
}

package Model <<Rectangle>> {
Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui

UiManager .left.|> Ui
UiManager -down-> MainWindow
MainWindow --> HelpWindow
MainWindow *-down-> CommandBox
MainWindow *-down-> ResultDisplay
MainWindow *-down-> FlashcardListPanel
MainWindow *-down-> FlashcardViewCard
MainWindow *-down-> StatusBarFooter
MainWindow *-down-> ReviewPanel
MainWindow *-down-> QuizPanel

ReviewPanel --|> StudyPanel
QuizPanel --|> StudyPanel

FlashcardListPanel -down-> FlashcardListCard
FlashcardViewCard -down-> FlashcardQuestionCard
FlashcardViewCard -down-> FlashcardAnswerCard

MainWindow -left-|> UiPart

ResultDisplay --|> UiPart
CommandBox --|> UiPart
FlashcardListPanel --|> UiPart
FlashcardListCard --|> UiPart
FlashcardViewCard --|> UiPart
FlashcardQuestionCard --|> UiPart
FlashcardAnswerCard --|> UiPart
StatusBarFooter --|> UiPart
HelpWindow -down-|> UiPart

FlashcardListCard ..> Model
UiManager -right-> Logic
MainWindow -left-> Logic

QuizPanel -[hidden]left- ReviewPanel
FlashcardListPanel -[hidden]left- FlashcardViewCard
FlashcardViewCard -[hidden]left- HelpWindow
HelpWindow -[hidden]left- CommandBox
CommandBox -[hidden]left- ResultDisplay
ResultDisplay -[hidden]left- StatusBarFooter

MainWindow -[hidden]-|> UiPart
@enduml
