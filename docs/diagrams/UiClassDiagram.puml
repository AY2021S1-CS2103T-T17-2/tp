@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR

package UI <<Rectangle>>{
Interface Ui <<Interface>>
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow
Class HelpWindow
Class ResultDisplay
Class CommandBox
Class FlashcardListPanel
Class FlashcardListCard
Class FlashcardViewCard
Class StudyPanel
Class ReviewPanel
Class QuizPanel

}

package Model <<Rectangle>> {
Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui
UiManager .left.|> Ui
UiManager -right-> Logic
UiManager -down-> MainWindow

MainWindow -down-> FlashcardListPanel
MainWindow *-down-> ResultDisplay
MainWindow *-down-> CommandBox
FlashcardListPanel -down-> "*" FlashcardListCard
MainWindow -down-> FlashcardViewCard
MainWindow -down-> HelpWindow
MainWindow -right..> StudyPanel
MainWindow -left..> ReviewPanel
MainWindow -right..> QuizPanel

QuizPanel -down-|> StudyPanel
ReviewPanel -down-|> StudyPanel

HelpWindow --|> UiPart
ResultDisplay --|> UiPart
FlashcardListPanel --|> UiPart
FlashcardViewCard --|> UiPart
StudyPanel --|> UiPart
MainWindow -right-|> UiPart

FlashcardListCard ..> Model

StudyPanel -[hidden]right-> FlashcardListPanel
HelpWindow -[hidden]left-> FlashcardListPanel
ResultDisplay -[hidden]left-> HelpWindow
FlashcardViewCard -[hidden]right-> FlashcardListPanel
StudyPanel -[hidden]left-> ResultDisplay
@enduml
