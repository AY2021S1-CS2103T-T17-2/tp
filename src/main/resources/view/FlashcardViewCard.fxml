<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <rowConstraints>
            <RowConstraints percentHeight="75.0"/>
            <RowConstraints percentHeight="25.0"/>
        </rowConstraints>

        <VBox VBox.vgrow="ALWAYS" HBox.hgrow = "ALWAYS" GridPane.rowIndex="0">
            <StackPane  fx:id="questionViewPlaceholder"  VBox.vgrow="ALWAYS" styleClass="pane-with-border"/>
        </VBox>

        <VBox VBox.vgrow="ALWAYS" HBox.hgrow = "ALWAYS"  GridPane.rowIndex="1">
            <StackPane fx:id="answerViewPlaceholder" VBox.vgrow="ALWAYS" styleClass="pane-with-border">
            </StackPane>
        </VBox>
    </GridPane>
</HBox>
