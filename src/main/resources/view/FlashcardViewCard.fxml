<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.TextFlow?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.image.ImageView?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints percentWidth="10.0" minWidth="20"/>
            <ColumnConstraints percentWidth="80.0"/>
            <ColumnConstraints percentWidth="10.0" minWidth="20"/>
<!--            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />-->
        </columnConstraints>
        <rowConstraints>
            <RowConstraints percentHeight="5.0" minHeight="20"/>
            <RowConstraints percentHeight="90.0"/>
            <RowConstraints percentHeight="5.0" minHeight="20"/>
        </rowConstraints>
        <VBox spacing= "20" minHeight="105" GridPane.columnIndex="1" GridPane.rowIndex="1">

            <GridPane>
                <columnConstraints>
                    <ColumnConstraints percentWidth="80.0" />
                    <ColumnConstraints percentWidth="10.0" minWidth="20"/>
                    <ColumnConstraints percentWidth="10.0" minWidth="20"/>
                </columnConstraints>

                <HBox spacing="5" GridPane.columnIndex="0">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="question" text="\$question" styleClass="cell_big_label" >
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                </HBox>

                <Text fx:id="favouriteIcon"  text="\$favouriteIcon" GridPane.columnIndex="1"/>
                    <TextFlow fx:id="ratingPane" GridPane.columnIndex="2">
                        <Text fx:id="rating" text="\$rating"></Text>
                        <Text fx:id="ratingIcon"></Text>
                    </TextFlow>
            </GridPane>

            <HBox>
                <Label fx:id="category" styleClass="cell_small_label" text="\$category" />
                <padding>
                    <Insets  bottom="10"/>
                </padding>
            </HBox>
            <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                <ImageView>
                    <Image url="@/images/flashcard_deck_32.png" />
                </ImageView>
            </VBox>

            <Label fx:id="answer" styleClass="cell_small_label" text="\$answer" />
            <Label fx:id="note" styleClass="cell_small_label" text="\$note"/>
            <FlowPane fx:id="tags" />
        </VBox>
    </GridPane>
</HBox>
